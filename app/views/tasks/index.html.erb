<div class= "container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Task", new_task_path, class: "btn btn-info" %>
    </div>
      <h1>Tasks</h1>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Due On</th>
          </tr>
        </thead>
        <% @tasks.each do |task| %>
          <tr>
            <td>
              <% if task.complete == true %>
                <s><%= link_to task.description, task_path(task) %></s>
              <% else %>
                <%= link_to task.description, task_path(task) %>
              <% end %>
            </td>
            <td>
              <div class= "text-left">
                <% if task.due_date %>
                  <%= task.due_date.strftime("%m/%d/%Y") %>
                <% end %>
              </div>
            </td>
            <td>
              <div class= "text-right">
                <%= link_to "Edit", edit_task_path(task), class: "btn btn-info" %>
                <%= link_to "Delete", task_path(task), method: :delete, class: "btn btn-danger" %>
              </div>
            </td>
            <% end %>
          </tr>
      </table>
    </div>
